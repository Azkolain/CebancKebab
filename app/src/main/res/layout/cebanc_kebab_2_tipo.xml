<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cebanc_kebab_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alumno.cebanckebab.CebancKebabMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutTamaino"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTamaino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/textTamaino"
                android:textSize="20sp" />


            <Spinner
                android:id="@+id/spinnerTamaino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/tamaino"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTipoCarne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTipoCarne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/textTipoCarne"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerTipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/tipo"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutKebab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:layout_marginBottom="16sp"
            android:layout_marginTop="16sp">


            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <LinearLayout
                    android:id="@+id/layoutdoner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textNombreDoner"
                        android:layout_weight="1"
                        android:background="@drawable/imagen_doner"/>

                    <TextView
                        android:text="\nDÖNER KEBAB\n\nCarne de pollo, ternera o míxta, lechuga, tomate, cebolla y salsas\n\n\n3,50€"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textIngredientesDoner"
                        android:background="@color/colorWhite"
                        android:paddingLeft="10sp"
                        android:gravity="left"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutDurum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textNombreDurum"
                        android:layout_weight="1"
                        android:background="@drawable/imagen_durum"/>

                    <TextView
                        android:text="\nDÜRUM KEBAB\n\nCarne de pollo, ternera o míxta, lechuga, tomate, cebolla y salsas\n\n\n4,50€"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textIngredientesDurum"
                        android:background="@color/colorWhite"
                        android:paddingLeft="10sp"
                        android:gravity="left"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLahmacum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textNombreLahmacum"
                        android:layout_weight="1"
                        android:background="@drawable/imagen_lahmacum"/>

                    <TextView
                        android:text="\nLAHMACUM\n\nPizza turca de carne de pollo, ternera o mixta, lechuga, tomate, cebolla y salsas\n\n5,00€"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:id="@+id/textIngredientesLahmacum"
                        android:paddingLeft="10sp"
                        android:gravity="left"
                        android:layout_weight="1" />
                </LinearLayout>

            </ViewFlipper>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textC"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:text="Cantidad:"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textCantidadProducto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <Button
                        android:text="-"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/buttonMenosProducto"
                        android:layout_weight="1"
                        android:onClick="onClickMenosProducto"/>

                    <Button
                        android:text="+"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/buttonMasProducto"
                        android:layout_weight="1"
                        android:onClick="onClickMasProducto"/>

                </LinearLayout>

                <Button
                    android:id="@+id/buttonAñadir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onClickAnadir"
                    android:text="Añadir" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSalir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonSalir"
            android:onClick="onClickSalir"/>

        <Button
            android:id="@+id/buttonSiguiente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonSiguiente"
            android:onClick="onClickSiguiente"/>

    </LinearLayout>

</LinearLayout>